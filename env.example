# Example environment variables for the WDBX PDF-to-HTML converter application

FLASK_SECRET_KEY=replace-me-with-secure-key
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=generated_html
WDBX_VECTOR_DIMENSION=1
WDBX_ENABLE_PLUGINS=false
METRICS_PORT=8000
METRICS_ADDR=0.0.0.0

# Discord bot token
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Slack webhook URL
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Teams webhook URL
TEAMS_WEBHOOK_URL=your_teams_webhook_url_here

# Admin credentials for secure access (Flask-Login and JWT)
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=replace-with-password-hash
# JWT secret key for token generation
JWT_SECRET_KEY=replace-me-with-jwt-secret-key
# Comma-separated roles for admin user
ADMIN_ROLES=admin

# API URLs for local LLM providers
OLLAMA_API_URL=http://localhost:11434
LMSTUDIO_API_URL=http://127.0.0.1:8000

# HTTP server settings
HOST=0.0.0.0
PORT=5000
# SSL certificate and key file paths (optional)
SSL_CERTFILE=/path/to/cert.pem
SSL_KEYFILE=/path/to/key.pem
# Raw SSL socket server port (optional)
SOCKET_PORT=9001 